/**
 * Plugin Name: {{{ pluginName }}}
 * Description: This is a plugin generated by the Glitch Gutenberg Block Kit
 */

/**
 * Enqueue assets for editor portion of Gutenberg
 */
add_action( 'enqueue_block_editor_assets', function() {
	// Files.
	$block_path = 'dist/src.js';
	$block_css = 'dist/src.css';
	// Block.
	wp_enqueue_script(
		'{{{ pluginName }}}-block-js',
		plugins_url( $block_path, __FILE__ ),
		[ 'wp-blocks', 'wp-editor', 'wp-element', 'wp-components' ],
		filemtime( plugin_dir_path( __FILE__ ) . $block_path )
	);
	// Editor CSS.
	wp_enqueue_style(
		'{{{ pluginName }}}-block-css',
		plugins_url( $block_css, __FILE__ ),
		[],
		filemtime( plugin_dir_path( __FILE__ ) . $block_css )
	);
} );

/**
 * Enqueue assets for front end
 */
add_action( 'enqueue_block_assets', function() {
	// Enqueue style
	wp_enqueue_style(
		'{{{ pluginName }}}-css',
		plugins_url( 'dist/style.css', __FILE__ ),
		[],
		filemtime( plugin_dir_path( __FILE__ ) . 'dist/style.css' )
	);
} );