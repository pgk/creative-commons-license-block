/**
 * Enqueue assets for editor portion of Gutenberg
 */
function {{{ plugin_name }}}_editor_assets() {
	// Files.
	$block_path = 'index.js';
	$block_css = 'editor.css';
	// Block.
	wp_enqueue_script(
		'{{{ plugin_name }}}-block-js',
		plugins_url( $block_path, __FILE__ ),
		[ 'wp-blocks', 'wp-editor', 'wp-element', 'wp-components' ],
		filemtime( plugin_dir_path( __FILE__ ) . $block_path )
	);
	// Editor CSS.
	wp_enqueue_style(
		'{{{ plugin_name }}}-block-css',
		plugins_url( $block_css, __FILE__ ),
		[],
		filemtime( plugin_dir_path( __FILE__ ) . $block_css )
	);
}
add_action( 'enqueue_block_editor_assets', '{{{ plugin_name }}}_editor_assets' );

/**
 * Enqueue assets for front end
 */
function {{{ plugin_name }}}_view_assets() {
	// Files.
	// Enqueue Juxtapose style.
	wp_enqueue_style(
		'{{{ plugin_name }}}-css',
		plugins_url( 'style.css', __FILE__ ),
		[],
		filemtime( plugin_dir_path( __FILE__ ) . 'style.css' )
	);
}
add_action( 'enqueue_block_assets', '{{{ plugin_name }}}_view_assets' );
